{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "@sumond25/ngx-currency",
  "version": "3.0.1",
  "description": "A very simple currency mask directive that allows using a number attribute with the ngModel.",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:lib": "ng build ngx-currency && copyfiles README.md LICENSE.txt dist/ngx-currency/",
